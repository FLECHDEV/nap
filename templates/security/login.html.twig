{% extends 'base.html.twig' %}

{% block title %}NAP-Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">C'est qui ?</h1>
    <label for="inputUsername"></label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control-sm" placeholder="pseudo" required autofocus><br>
    <label for="inputPassword"></label>
    <input type="password" name="password" id="inputPassword" class="form-control-sm" placeholder="mot de passe" required>

    <input type="hidden" name="_csrf_token"
        value="{{ csrf_token('authenticate') }}"><br><br>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-info" type="submit">
        Rock'n'roll!
    </button>
</form>
{% endblock %}
