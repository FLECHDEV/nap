{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Fiche de {{ user.username }}</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>*****</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a type="button" class="btn btn-warning btn-lg btn-block" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
    <a type="button" class="btn btn-light btn-lg btn-block" href="{{ path('user_index') }}">retour liste</a>



        <a type="button" class="btn btn-danger btn-lg btn-block">{{ include('user/_delete_form.html.twig') }}</a>
{% endblock %}
